<div class="mt-4">
  <h3>Thêm mới</h3>

  <form class="mt-4" method="POST" action="/courses/store">
    <div class="form-group">
      <label for="name">Tên</label>
      <input
        type="text"
        class="form-control"
        id="name"
        name="name"
        required
      />
    </div>

    <div class="form-group">
      <label for="description">Mô tả</label>
      <textarea
        class="form-control"
        id="description"
        name="description"
        required
      ></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Thêm</button>
  </form>
</div>
